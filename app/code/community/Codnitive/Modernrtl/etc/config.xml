<config>
    <modules>
        <Codnitive_Modernrtl>
            <version>1.7.02.137</version>
            <title>RtL Modern Theme</title>
            <link><![CDATA[http://www.codnitive.com/]]></link>
        </Codnitive_Modernrtl>
    </modules>
    <global>
        <models>
            <modernrtl>
                <class>Codnitive_Modernrtl_Model</class>
            </modernrtl>
        </models>
        <helpers>
            <modernrtl>
                <class>Codnitive_Modernrtl_Helper</class>
            </modernrtl>
        </helpers>
        <resources>
            <modernrtl_setup>
                <setup>
                    <module>Codnitive_Modernrtl</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </modernrtl_setup>
            <modernrtl_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </modernrtl_write>
            <modernrtl_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </modernrtl_read>
        </resources>
        <blocks>
            <bundle>
                <rewrite>
                    <catalog_product_view_type_bundle_option_checkbox>Codnitive_Modernrtl_Block_Bundle_Catalog_Product_View_Type_Bundle_Option_Checkbox</catalog_product_view_type_bundle_option_checkbox>
                    <catalog_product_view_type_bundle_option_radio>Codnitive_Modernrtl_Block_Bundle_Catalog_Product_View_Type_Bundle_Option_Radio</catalog_product_view_type_bundle_option_radio>
                </rewrite>
            </bundle>
            <catalog>
                <rewrite>
                    <product_view_options_type_date>Codnitive_Modernrtl_Block_Catalog_Product_View_Options_Type_Date</product_view_options_type_date>
                    <product_view_options_type_select>Codnitive_Modernrtl_Block_Catalog_Product_View_Options_Type_Select</product_view_options_type_select>
                </rewrite>
            </catalog>
            <modernrtl>
                <class>Codnitive_Modernrtl_Block</class>
            </modernrtl>
        </blocks>
    </global>

    <frontend>
        <layout>
            <updates>
                <modernrtl>
                    <file>modernrtl.xml</file>
                </modernrtl>
            </updates>
        </layout>
    </frontend>
</config>